{
  "name": "@jsonbored/safemocker",
  "version": "0.2.0",
  "description": "A type-safe, Jest & Vitest-compatible mock for next-safe-action. Replicates real middleware behavior and returns proper SafeActionResult structure. Fun name: 'safe' + 'mocker' = mocking tool for next-safe-action!",
  "keywords": [
    "next-safe-action",
    "mock",
    "testing",
    "jest",
    "vitest",
    "type-safe",
    "server-actions"
  ],
  "homepage": "https://github.com/JSONbored/safemocker#readme",
  "bugs": {
    "url": "https://github.com/JSONbored/safemocker/issues"
  },
  "license": "MIT",
  "author": "JSONbored",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JSONbored/safemocker.git"
  },
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./jest": {
      "types": "./dist/jest-adapter.d.ts",
      "import": "./dist/jest-adapter.mjs",
      "require": "./dist/jest-adapter.cjs"
    },
    "./jest/mock": {
      "types": "./dist/jest-mock.d.ts",
      "import": "./dist/jest-mock.mjs",
      "require": "./dist/jest-mock.cjs"
    },
    "./vitest": {
      "types": "./dist/vitest-adapter.d.ts",
      "import": "./dist/vitest-adapter.mjs",
      "require": "./dist/vitest-adapter.cjs"
    },
    "./vitest/mock": {
      "types": "./dist/vitest-mock.d.ts",
      "import": "./dist/vitest-mock.mjs",
      "require": "./dist/vitest-mock.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup && pnpm build:types",
    "build:types": "tsc --declaration --outDir dist",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "trunk check eslint",
    "lint:fix": "trunk check --fix eslint",
    "format": "trunk fmt prettier",
    "format:check": "trunk fmt --check prettier",
    "test": "jest --config .trunk/configs/jest.config.cjs",
    "test:coverage": "jest --coverage --config .trunk/configs/jest.config.cjs",
    "test:watch": "jest --watch --config .trunk/configs/jest.config.cjs",
    "type-check": "trunk check typescript",
    "check": "trunk check",
    "check:fix": "trunk check --fix",
    "fmt": "trunk fmt",
    "fmt:check": "trunk fmt --check",
    "changelog:generate": "git-cliff --config cliff.toml --tag v$(node -p \"require('./package.json').version\")",
    "changelog:preview": "git-cliff --config cliff.toml --latest --unreleased",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm build",
    "docs:dev": "cd docs && pnpm dev",
    "docs:build": "cd docs && pnpm build",
    "docs:start": "cd docs && pnpm start",
    "docs:type-check": "cd docs && pnpm types:check",
    "docs:validate-links": "cd docs && tsx scripts/validate-links.ts",
    "docs:generate-types": "cd docs && fumadocs-mdx"
  },
  "peerDependencies": {
    "next-safe-action": "^8.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "git-cliff": "^2.5.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "next": "^16.1.1",
    "next-safe-action": "^8.0.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/JSONbored"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.3.12"
    }
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "fumadocs-core": "^16.4.1",
    "fumadocs-typescript": "^5.0.0",
    "tailwind-merge": "^3.4.0"
  }
}
